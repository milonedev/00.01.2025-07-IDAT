{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "none",
        "printWidth": 100
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}
